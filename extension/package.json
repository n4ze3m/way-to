{
  "name": "way-to-website",
  "displayName": "Way to Website",
  "version": "0.0.1",
  "description": "Don't Forget the Website Anymore",
  "author": "n4ze3m",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "test": "plasmo test"
  },
  "dependencies": {
    "plasmo": "0.82.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@tailwindcss/forms": "^0.5.4",
    "@types/chrome": "0.0.241",
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27",
    "prettier": "3.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "5.1.6"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*",
      "*://to/*",
      "*://*.wayto.website/*"
    ],
    "declarative_net_request": {
      "rule_resources": [
        {
          "enabled": true,
          "id": "redirect",
          "path": "~redirect.json"
        }
      ]
    },
    "permissions": [
      "declarativeNetRequestWithHostAccess",
      "activeTab",
      "cookies",
      "storage"
    ],
    "omnibox": {
      "keyword": "to"
    }
  }
}
